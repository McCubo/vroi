{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">City Creation</h1>
            </div>
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-6">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>City Name:</label>
                    {{ form_widget(form.citName, { 'attr': {'class': 'form-control'} }) }}
                    <small class="form-text text-muted">
                        {{ form_errors(form.citName) }}
                    </small>
                </div>
                <div class="form-group">
                    <label>Select country:</label>
                    {{ form_widget(form.citCou, { 'attr': {'class': 'form-control'} }) }}
                    <small class="form-text text-muted">
                        {{ form_errors(form.citCou) }}
                    </small>
                </div>
                <input type="submit" class="btn btn-success" value="Create" />
                <input type="reset" class="btn btn-danger" value="Reset Values in Form" />
                <a href="{{ path('admin_city_index') }}">
                    <button type="button" class="btn btn-info">Back to the list</button>
                </a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
