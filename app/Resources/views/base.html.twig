<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="base template for AmLog DbProviders system">
        <meta name="author" content="cubiascaceres@gmail.com">
        <title>{% block title %}AmLog DB.Providers{% endblock %}</title>
        <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/metisMenu/metisMenu.min.css') }}" rel="stylesheet">
        <link href="{{ asset('dist/css/sb-admin-2.css') }}" rel="stylesheet">
        <link href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet" type="text/css">        
	<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}{% endblock %}
    </head>

    <body>
        <div id="wrapper">
            <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html">AmLog ProviderDB</a>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            {{ app.user.printvalue }}<i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="userList.html"><i class="fa fa-gear fa-fw"></i> Configure Personal Account</a>
                            </li>
                            <li class="divider"></li>
                            <li><a href="{{ path('logout') }}"><i class="fa fa-sign-out fa-fw"></i> Exit the System</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <ul class="nav" id="side-menu">
                            <li>
                                <a href="{{ path('home') }}"><i class="fa fa-dashboard fa-fw"></i> Home</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <a href="{{ path('provider_index') }}"><i class="fa fa-save fa-fw"></i> Add provider</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_provider_type_index') }}"><i class="fa fa-cogs fa-fw"></i> Configure Provider Type</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_provider_group_index') }}"><i class="fa fa-object-group fa-fw"></i> Configure Provider Group</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_provider_afiliation_index') }}"><i class="fa fa-exchange fa-fw"></i> Configure Provider Afiliation</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_service_index') }}"><i class="fa fa-server fa-fw"></i> Configure Provider Services</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_country_index') }}"><i class="fa fa-flag-o fa-fw"></i> Configure Countries</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_city_index') }}"><i class="fa fa-building fa-fw"></i> Configure Cities</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_station_index') }}"><i class="fa fa-stack-overflow fa-fw"></i> Configure station</a>
                            </li>
                            <li>
                                <a href="{{ path('user_index') }}"><i class="fa fa-users fa-fw"></i> Configure Users</a>
                            </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                {% block body %}{% endblock %}
            </div>
        </div>
        <script src="{{ asset('vendor/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('vendor/metisMenu/metisMenu.min.js') }}"></script>
        <script src="{{ asset('vendor/datatables-responsive/dataTables.responsive.js') }}"></script>
        <script src="{{ asset('dist/js/sb-admin-2.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
