{% extends 'base.html.twig' %}
{% block body %}
    <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>    
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Email Template Edit</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-10">
                {{ form_start(form) }}
                <div class="form-group">
                    <label>Email Template Name:</label>
                    {{ form_widget(form.emaName, { 'attr': {'class': 'form-control'} }) }}
                    <small class="form-text text-muted">
                        {{ form_errors(form.emaName) }}
                    </small>
                </div>
                <div class="form-group">
                    <label>Template body:</label>
                    {{ form_widget(form.emaBody, { 'attr': {'class': 'form-control'} }) }}
                    <small class="form-text text-muted">
                        {{ form_errors(form.emaBody) }}
                    </small>
                </div>
                <input type="submit" class="btn btn-success" value="Update" />
                <input type="reset" class="btn btn-danger" value="Reset Values in Form" />
                <a href="{{ path('admin_email_index') }}">
                    <button type="button" class="btn btn-info">Back to the list</button>
                </a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        CKEDITOR.replace('appbundle_amlemailtemplate[emaBody]');
    </script>
{% endblock %}