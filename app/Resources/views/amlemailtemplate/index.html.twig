{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Email Template List</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <table id="catalog_list" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Email Template ID</th>
                            <th>Email Template Name</th>                          
                        </tr>
                    </thead>
                    <tbody>
                        {% for amlEmailTemplate in amlEmailTemplates %}
                            <tr>
                                <td><a href="{{ path('admin_email_edit', { 'emaId': amlEmailTemplate.emaId }) }}">{{ amlEmailTemplate.emaId }}</a></td>
                                <td><a href="{{ path('admin_email_edit', { 'emaId': amlEmailTemplate.emaId }) }}">{{ amlEmailTemplate.emaName }}</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('admin_email_new') }}">
                    <button type="button" class="btn btn-info">Create new Email Template</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $("#catalog_list").DataTable({
                "info": false,
                "searching": false,
                "lengthChange": false
            });
        });
    </script>    
{% endblock %}