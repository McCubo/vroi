{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('css/multiple-select.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/fontawesome-stars.css') }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Create Provider</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <br>
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form" action="{{ path('provider_save') }}" method="post">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input name="provider[name]" type="text" class="form-control" placeholder="Name of the provider">
                                        </div>
                                        <div class="form-group">
                                            <label>Address</label>
                                            <input name="provider[address]" type="text" class="form-control" placeholder="Provider address">
                                        </div>
                                        <div class="form-group">
                                            <label>Country is based on</label>
                                            <select name="provider[cou_id]" class="form-control">
                                                {% for amlCountry in amlCountries %}
                                                    <option value="{{ amlCountry.couId }}">{{ amlCountry.couName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>City</label>
                                            <select class="form-control">

                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Main phone number</label>
                                            <input name="provider[main_phone]" type="tel" class="form-control" placeholder="Phone number">
                                        </div>
                                        <div class="form-group">
                                            <label>Fax</label>
                                            <input name="provider[fax]" type="tel" class="form-control" placeholder="Phone number">
                                        </div>
                                        <div class="form-group">
                                            <label>Belongs to a Group?</label>
                                            <select name="provider[group]" class="form-control">
                                                {% for amlGroup in amlGroups %}
                                                    <option value="{{ amlGroup.prgId }}">{{ amlGroup.prgName }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Provider Type</label>
                                            <select name="provider[type]" class="form-control">
                                                {% for amlType in amlProvidersType %}
                                                    <option value="{{ amlType.prtId }}">{{ amlType.displayName}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                    <!-- Column left-->
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Afiliation</label>
                                            <select name="provider[affiliation]" class="form-control">
                                                {% for amlAffiliation in amlAffiliations %}
                                                    <option value="{{ amlAffiliation.praId }}">{{ amlAffiliation.displayName }}</option>
                                                {% endfor%}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Services</label> <br />
                                            <select name="provider[services][]" id="serviceListbox" multiple="multiple">
                                                {% for amlService in amlServices %}
                                                    <option value="{{ amlService.serId }}">{{ amlService.serName }}</option>
                                                {% endfor%}
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label for="text1"> Is this provider related to any other provider?</label><br />
                                            <select name="provider[relations]" id="providerRelationListbox" multiple="multiple" style="min-width: 316px;">
                                                {% for amlProvider in amlProviders %}
                                                    <option value="{{ amlProvider.proId }}">{{ amlProvider.proName }}</option>
                                                {% endfor%}
                                            </select>
                                        </div>                                            
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea name="provider[description]" class="form-control" rows="5" id="comment"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Provider site URL</label>
                                            <input name="provider[url]" type="url" class="form-control" placeholder="www.example.com">
                                        </div>                                            
                                    </div>

                                    <!-- End Contact list-->

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-lg-12 align-items-center">
                                                <p style="font-size: 2em; font-weight: bold;">Contact list</p>
                                            </div>
                                            <div class="col-lg-12 align-items-center">
                                                <div data-dynamic-form>
                                                    <div data-dynamic-form-template="multi">
                                                        <label>
                                                            <input style="margin-right: 5px;" type="text" name="multi[ID][name]" placeholder="Name" data-dynamic-form-input-id-template="ID"/>
                                                            <input style="margin-right: 5px;" type="text" name="multi[ID][phone]" placeholder="Phone Number" data-dynamic-form-input-id-template="ID"/>
                                                            <input style="margin-right: 5px;" type="text" name="multi[ID][job_title]" placeholder="Job Title" data-dynamic-form-input-id-template="ID"/>
                                                            <input style="margin-right: 5px;" type="email" name="multi[ID][email]" placeholder="eMail" data-dynamic-form-input-id-template="ID"/>
                                                            <button type="button"  data-dynamic-form-add src="{{ asset('images/add.png') }}">
                                                                <img src="{{ asset('images/add.png') }}" />
                                                            </button>
                                                            <button type="button" data-dynamic-form-remove>
                                                                <img src="{{ asset('images/remove.png') }}" />
                                                            </button>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <h3>Rate this provider</h3>
                                            </div>
                                            <div >
                                                <div class="form-group col-lg-4">
                                                    <label>Agility</label>
                                                    <select name="evaluation[first]" id="firstQuestion" >
                                                        {% for i in 1..5%}
                                                            <option value="{{i}}">{{i}}</option>
                                                        {% endfor%}
                                                    </select>
                                                </div>
                                                <div class="form-group col-lg-4">
                                                    <label>Fare</label>
                                                    <select name="evaluation[second]" id="secondQuestion" >
                                                        {% for i in 1..5%}
                                                            <option value="{{i}}">{{i}}</option>
                                                        {% endfor%}
                                                    </select>
                                                </div>
                                                <div class="form-group col-lg-4">
                                                    <label>Credit</label>
                                                    <select name="evaluation[third]" id="thirdQuestion" >
                                                        {% for i in 1..5%}
                                                            <option value="{{i}}">{{i}}</option>
                                                        {% endfor%}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label>Upload documents</label>
                                                <input name="file_doc[]" type="file">
                                            </div>
                                            <label>Enter a comment</label>
                                            <textarea name="feedback[text]" rows="4" class="form-control" placeholder="Text Here" id="textCom"></textarea>
                                            <br>
                                            <button type="submit" class="btn btn-primary">Save</button>
                                            <button type="reset" class="btn btn-default">Reset</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/multiple-select.js') }}"></script>
    <script src="{{ asset('js/jquery.barrating.js') }}"></script>
    <script src="{{ asset('js/dynamic_forms.min.js') }}"></script>
    <script>
        $('#serviceListbox').multipleSelect({
            width: 460,
            multiple: true,
            multipleWidth: 400,
            filter: true,
            selectAll: false
        });
        $('#firstQuestion').barrating({
            theme: 'fontawesome-stars'
        });
        $('#secondQuestion').barrating({
            theme: 'fontawesome-stars'
        });
        $('#thirdQuestion').barrating({
            theme: 'fontawesome-stars'
        });
        $('#providerRelationListbox').multipleSelect({
            width: 460,
            multiple: true,
            multipleWidth: 400,
            filter: true,
            selectAll: false
        });
        var dynamicForms = new DynamicForms();
        dynamicForms.automaticallySetupForm();
    </script>
{% endblock %}
