{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('vendor/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Vendors Group List</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <table id="catalog_list" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Vendor Group Name</th>
                            <th>Is Group Active?</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for amlProviderGroup in amlProviderGroups %}
                            <tr>
                                <td><a href="{{ path('admin_provider_group_edit', { 'prgId': amlProviderGroup.prgId }) }}">{{ amlProviderGroup.prgName }}</a></td>
                                <td>{% if amlProviderGroup.prgStatus %}Yes{% else %}No{% endif %}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('admin_provider_group_new') }}">
                    <button type="button" class="btn btn-info">Create new Vendor Group</button>
                </a>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('vendor/datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script>
        $(document).ready(function () {
            $("#catalog_list").DataTable({
                "info": false,
                "searching": false,
                "lengthChange": false
            });
        });
    </script>    
{% endblock %}